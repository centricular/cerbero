from cerbero.tools.libtool import LibtoolLibrary

class Recipe(recipe.Recipe):
    name = 'librsvg'
    version = '2.40.20'
    licenses = [License.LGPLv2Plus]
    deps = ['libcroco', 'gdk-pixbuf', 'pango', 'cairo']
    stype = SourceType.TARBALL
    btype = BuildType.MESON
    url = 'gnome://'
    tarball_checksum = 'cff4dd3c3b78bfe99d8fcfad3b8ba1eee3289a0823c0e118d78106be6b84c92b'
    # GTK3 support just builds rsvg-view-3, which is useless for Cerbero
    meson_options = {'pixbuf-loder': 'enabled', 'gtk3': 'disabled'}

    patches = ['librsvg/0001-WIP-Port-build-system-to-Meson.patch']

    files_libs = ['librsvg-2']
    files_bins = ['rsvg-convert']
    licenses_bins = [License.GPLv2Plus]
    files_loader = ['lib/gdk-pixbuf-2.0/2.10.0/loaders/libpixbufloader-svg*']
    files_devel = ['include/librsvg-2.0/librsvg/*.h',
                   'lib/pkgconfig/librsvg-2.0.pc',
                   'lib/librsvg-2.a', 'lib/librsvg-2.la']
    files_typelibs = ['Rsvg-2.0']

    def post_install (self):
        deps = ['croco-0.6', 'gdk_pixbuf-2.0', 'pangocairo-1.0', 'pangoft2-1.0',
                'pango', 'cairo', '-lgdi32', '-msimg32', '-lxml2']
        lib = LibtoolLibrary('rsvg-2', None, None, None, self.config.libdir,
                self.config.target_platform, deps=deps)
        lib.save()
        super().post_install()
