from cerbero.tools.libtool import LibtoolLibrary


class Recipe(recipe.Recipe):
    name = 'freetype'
    version = '2.9.1'
    #stype = SourceType.TARBALL
    #url = 'savannah://.tar.bz2'
    #tarball_checksum = 'e6ffba3c8cef93f557d1f767d7bc3dee860ac7a3aaff588a521e081bc36f4c8a'
    btype = BuildType.MESON
    remotes = {'origin': 'https://github.com/centricular/freetype2.git'}
    commit = 'origin/meson'
    licenses = [{License.FreeType: ['docs/LICENSE.TXT']}, License.GPLv2Plus]
    meson_options = {'harfbuzz': 'disabled'}
    deps = ['zlib', 'bzip2', 'libpng']

    patches = [name + '/0001-pngshim-Workaround-buggy-mingw-compiler.patch']

    files_libs = ['libfreetype']
    files_devel = ['lib/pkgconfig/freetype2.pc', 'include/freetype2']

    def post_install (self):
        lib = LibtoolLibrary('freetype', None, None, None, self.config.libdir,
                self.config.target_platform, deps=['png16', 'bz2', 'z'])
        lib.save()
        super().post_install()
